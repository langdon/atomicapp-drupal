{
  "apiVersion": "v1beta1",
  "id": "drupal",
  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "drupal",
      "containers": [
        {
          "name": "drupal",
          "image": "$image",
          "env": [
            {"name": "USER", "value": "$db_user"},
            {"name": "PASS", "value": "$db_pass"},
            {"name": "NAME", "value": "$db_name"}
          ],
          "cpu": 1,
          "ports": [
            {
              "containerPort": 80
            }
          ]
        }
      ]
    }
  },
  "labels": {
    "name": "drupal"
  },
  "kind": "Pod"
}
